{{define "alerts"}}
  {{if .Alert}}
    <div class="row">
      <div class="col-md-6 offset-md-3 text-center">
        <div class="alert alert-dismissible {{.Alert.AlertLevel}}">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <small>{{.Alert.AlertMessage}}</small>
        </div>
      </div>
    </div>
  {{end}}
{{end}}